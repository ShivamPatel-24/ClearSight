<%- include('partials/header') %>

  <div align="Center">
    <img src="/logo.png" width="300" height="300" />
  </div>


  <div class="border border-5 shadow bg-white rounded" style="margin: 3% 32% 5% 32%; padding: 5% 5%">
    <form action="/login" method="POST">
      <div class="form-group my-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" required placeholder="enter your email address">
      </div>
      <div class="form-group my-4">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" required placeholder="enter password">
      </div>
      <div class="form-group mt-5">
        <button type="submit" class="form-control btn btn-dark">Login</button>
      </div>

    </form>
    <p class="text-center my-3">OR</p>
    <div class="card social-block">
      <a class="btn btn-block btn-social btn-microsoft text-center" href="/auth/microsoft" role="button">
        <i class="fab fa-microsoft w-25"></i>
        Sign In with Microsoft
      </a>
    </div>

    <div class="mt-4">
      <p class>Don't have an account?
        <!-- <button class="btn btn-light"> -->
        <a class="text-primary" href='/register'>Sign up for an account</a>
        <!-- </button> -->
      </p>
    </div>
  </div>



  <%- include('partials/footer') %>