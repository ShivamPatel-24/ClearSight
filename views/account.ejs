<body>
    <div class="d-flex justify-content-end my-5 mx-5 px-3">
      <a href="/logout"><button class="btn btn-secondary ">Logout</button></a>
    </div>
    <h5 align="center" class="my-5">Dashboard</h5>
    <% [1, 2, 3].forEach(num=> { %>
      <div class="container-fluid py-5 bg-light">
        <div class="container">
          <div class="row row-cols-4 gx-4 gy-4">
            <% [1, 2, 3, 4].forEach((num)=> { %>
              <div class="col">
                <div class="card h-100 shadow-sm product-card">
                  <div id="carouselExampleIndicators<%= num %>" class="carousel slide" data-bs-ride="false">
                    <ol class="carousel-indicators">
                      <li data-bs-target="#carouselExampleIndicators<%= num %>" data-bs-slide-to="0" class="active">
                      </li>
                      <li data-bs-target="#carouselExampleIndicators<%= num %>" data-bs-slide-to="1"></li>
                      <li data-bs-target="#carouselExampleIndicators<%= num %>" data-bs-slide-to="2"></li>
                    </ol>
                    
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="https://m.media-amazon.com/images/I/71VbHaAqbML._AC_SX679_.jpg" class="d-block w-100"
                          alt="Product Image 1">
                      </div>
                    
                      <div class="carousel-item">
                        <img src="https://m.media-amazon.com/images/I/71CVCLyeLnL._AC_SX679_.jpg" class="d-block w-100"
                          alt="Product Image 2">
                      </div>
                      <div class="carousel-item">
                        <img src="https://m.media-amazon.com/images/I/81jlw8nEgJL._AC_SX679_.jpg" class="d-block w-100"
                          alt="Product Image 3">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators<%= num %>" role="button"
                      data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators<%= num %>" role="button"
                      data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span> 
                    </a>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><label class="my-5" >
                      <h5>Apple 2022 iPad Air (10.9-inch, Wi-Fi, 256GB) - Blue (5th Generation)</h5></label></h5>
                    <h6 class="card-subtitle mb-2 text-muted">$679.00</h6>
                    <button class="btn btn-primary add-to-cart-btn">Add to Cart</button>
                    <a href="/cart" class="btn btn-secondary view-cart-btn">View Cart</a>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>
        </div>
      </div>
      <% }) %>


        <script src="/js/main.js"></script>
